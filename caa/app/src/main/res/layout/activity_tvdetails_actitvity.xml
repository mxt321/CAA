<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题 日期设备选择 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="#f66329"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/forget_right_return"
            android:layout_width="wrap_content"
            android:layout_height="108px"
            android:gravity="center">

            <TextView
                android:layout_width="46px"
                android:layout_height="30px"
                android:layout_gravity="center"
                android:layout_marginLeft="40px"
                android:background="@mipmap/register_back" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="屏幕详情"
            android:textColor="#ffffff"
            android:textSize="40px" />

        <TextView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:gravity="center">
        <!--商家图片-->
        <ImageView
            android:id="@+id/ll_business_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="10px"></ImageView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="16px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorOrange"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热度:"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center"
                android:layout_marginLeft="4px"
                android:background="@mipmap/home_detail_heat" />

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center"
                android:layout_marginLeft="4px"
                android:background="@mipmap/home_detail_heat" />

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center"
                android:layout_marginLeft="4px"
                android:background="@mipmap/home_detail_heat" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="餐厅标签"
            android:textSize="18sp" />

        <GridView
            android:id="@+id/gv_business_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:columnWidth="30px"
            android:horizontalSpacing="16px"
            android:numColumns="4"
            android:verticalSpacing="16px">

        </GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在播放广告列表"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/lv_playing_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:divider="@null"
            android:listSelector="@color/transparent">

        </ListView>
    </LinearLayout>


</LinearLayout>
