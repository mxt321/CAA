<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:background="#f66329"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="100px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我"
            android:textColor="#ffffff"
            android:textSize="40px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_me"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_gravity="center"
                android:layout_marginTop="100px"
                android:src="@mipmap/wo_upload_headphoto2x" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="吃葡萄不吐葡萄皮"
                android:textSize="30px" />

            <Button
                android:id="@+id/btn_me_publish"
                android:layout_gravity="center"
                android:layout_marginBottom="60px"
                android:layout_marginTop="80px"
                android:background="@drawable/shape"
                android:text="我的发布"
                android:textColor="#ffffff"
                android:textSize="30px"
                android:layout_height="80px"
                android:layout_width="300px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <Spinner
        android:id="@+id/hint1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececec"></Spinner>

    <Spinner
        android:id="@+id/hint2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="40px"
        android:background="#ececec"></Spinner>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="意见反馈"
                android:textSize="30px"
                android:paddingLeft="24px" />

            <TextView
                android:layout_width="16px"
                android:layout_height="28px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="24px"
                android:background="@mipmap/wo_more2x" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ececec"></Spinner>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="帮助"
                android:textSize="30px"
                android:paddingLeft="24px" />

            <TextView
                android:layout_width="16px"
                android:layout_height="28px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="24px"
                android:background="@mipmap/wo_more2x" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ececec"></Spinner>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="软件升级"
                android:textSize="30px"
                android:paddingLeft="24px" />

            <TextView
                android:layout_width="16px"
                android:layout_height="28px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="24px"
                android:background="@mipmap/wo_more2x" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ececec"></Spinner>
    </com.zhy.autolayout.AutoLinearLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="40px"
        android:background="#ececec"></Spinner>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/writ">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="退出登录"
            android:textSize="30px"
            android:id="@+id/userlogout" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececec"></Spinner>
</com.zhy.autolayout.AutoLinearLayout>