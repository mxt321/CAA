<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="#f66329"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/register_right_return"
            android:layout_width="wrap_content"
            android:layout_height="108px"
            android:gravity="center">

            <TextView
                android:layout_width="46px"
                android:layout_height="30px"
                android:layout_gravity="center"
                android:layout_marginLeft="40px"
                android:background="@mipmap/register_back2x" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="40px"
            android:gravity="center" />

        <TextView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160px"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="top"
                android:background="@null"
                android:hint="请输入您的手机号码"
                android:textColorHint="#D2D2D2"
                android:textSize="36px"
                android:textColor="#333333" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#f66329" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_et_valida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请输入短信验证码"
                    android:textColorHint="#D2D2D2"
                    android:textSize="36px"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/register_tv_valida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="获取验证码"
                    android:textColor="#f66329"
                    android:textSize="36px" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#f66329" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90px"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="top"
                android:background="@null"
                android:hint="请输入您的登录密码"
                android:inputType="textPassword"
                android:textColorHint="#D2D2D2"
                android:textSize="36px"
                android:textColor="#333333" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#f66329" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_et_confirm_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="top"
                android:background="@null"
                android:hint="请再次输入您的登录密码"
                android:inputType="textPassword"
                android:textColorHint="#D2D2D2"
                android:textSize="36px"
                android:textColor="#333333" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#f66329" />

        </LinearLayout>


        <Button
            android:id="@+id/register_btn_register"
            android:layout_width="fill_parent"
            android:layout_height="104px"
            android:layout_marginTop="80px"
            android:background="@drawable/shape"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="36px" />
    </LinearLayout>


</LinearLayout>
