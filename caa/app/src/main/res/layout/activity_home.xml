<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    tools:context="net.bjyfkj.caa.UI.activity.HomeActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/writ">

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/hint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </com.zhy.autolayout.AutoFrameLayout>

    <Spinner
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_above="@+id/radioGroup"
        android:background="#ececec"
        android:layout_height="1px"></Spinner>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_height="100px">

        <RadioButton
            android:id="@+id/home_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/dro_selector_color"
            android:textSize="35px" />

        <RadioButton
            android:id="@+id/home_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="我"
            android:textColor="@color/dro_selector_color"
            android:textSize="35px" />


    </RadioGroup>

</com.zhy.autolayout.AutoRelativeLayout>
