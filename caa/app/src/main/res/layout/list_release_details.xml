<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_btn_release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="16px"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img_lv_release_details"
                android:layout_width="160px"
                android:layout_height="160px"
                android:background="@drawable/shape_date" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="260px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_screen_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="外婆家一屏"
                        android:textColor="@color/colorOrange"
                        android:textSize="14sp" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="播放次数:"
                        android:textColor="#555555" />

                    <TextView
                        android:id="@+id/tv_play_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="25次"
                        android:textColor="#555555" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_receive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="领        取:"
                        android:textColor="#555555" />

                    <TextView
                        android:id="@+id/tv_receive_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="25次"
                        android:textColor="#555555" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到店人数:"
                        android:textColor="#555555" />

                    <TextView
                        android:id="@+id/tv_shop_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="25次"
                        android:textColor="#555555" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:layout_width="16px"
                android:layout_height="28px"
                android:layout_gravity="center"
                android:layout_marginLeft="80px"
                android:background="@mipmap/home_public_more" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="14px"
            android:background="#ececec"
            android:layout_height="1px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
